<% provide(:title, "Edit user") %>
<h1 class="text-center">Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= render 'fields', f: f %>
        <%= f.submit "Save changes", class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>